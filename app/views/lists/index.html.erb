<h1>Lists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <td><%= list.status %></td>
        <td><%= link_to 'Show', list, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_list_path(list), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', list, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#newList">
  New To-Do list
</button>
<div class="collapse" id="newList">
  <div class="card border-primary mb-3" style="width: 18rem;">
    <%= render 'form', list: @list %>
  </div>  
</div>
